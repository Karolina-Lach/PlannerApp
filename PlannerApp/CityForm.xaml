<Window x:Class="PlannerApp.CityForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlannerApp"
        mc:Ignorable="d"
        Title="CityForm" Height="200" Width="200">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0">
        <TextBlock Text="Enter the name of the city" TextAlignment="Center" FontSize="16" VerticalAlignment="Center" TextWrapping="Wrap" Margin="0,0,0,20" HorizontalAlignment="Center" Width="150" />
        <TextBox x:Name="cityForm" Margin="0,0,0,20" HorizontalAlignment="Center" Width="150" />
        <Button x:Name="changeButton" Content="Change" Click="Button_Click" />
    </StackPanel>
</Window>
